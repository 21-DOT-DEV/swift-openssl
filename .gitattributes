# Auto-detect text files and normalize line endings
* text=auto

# Swift files
*.swift text diff=swift

# C files (upstream library code)
*.c text diff=c
*.h text diff=c

# Upstream C library in Sources should be marked as vendored
Sources/libcrypto/**    linguist-vendored
Sources/libssl/**       linguist-vendored

# Custom placeholder files (not vendored)
Sources/libcrypto/src/Placeholder.c         linguist-vendored=false
Sources/libcrypto/include/Placeholder.h     linguist-vendored=false
Sources/libssl/src/Placeholder.c            linguist-vendored=false
Sources/libssl/include/Placeholder.h        linguist-vendored=false

